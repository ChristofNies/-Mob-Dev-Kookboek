<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_red_dark"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:background="@android:color/holo_red_dark"
        android:drawableLeft="@drawable/ic_restaurant_menu_black_24dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="Mijn Recepten"
        android:textAllCaps="true"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:background="@android:color/holo_red_dark"
        android:drawableLeft="@drawable/ic_add_white_24dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="Recept Toevoegen"
        android:textAllCaps="true"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:background="@android:color/holo_red_dark"
        android:drawableLeft="@drawable/ic_people_white_24dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="Vrienden"
        android:textAllCaps="true"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:background="@android:color/holo_red_dark"
        android:drawableLeft="@drawable/ic_date_range_white_24dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="Maaltijdplanner"
        android:textAllCaps="true"
        android:textColor="@android:color/background_light" />
</LinearLayout>